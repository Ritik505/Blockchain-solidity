pragma solidity ^0.8.24;

contract Functions {
   
    function global() public view returns (address) {
        return msg.sender;
    }

  
    function amount() public view returns (uint) { 
        uint balanceInWei = msg.sender.balance;      
        uint balanceInEther = balanceInWei / 1 ether; 
        return balanceInEther;                       
    }
}
